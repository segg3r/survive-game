<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>${release.zip.postfix}</id>
    <formats>
        <format>zip</format>
    </formats>
    <files>
        <file>
            <source>${project.build.directory}/${release.finalName}</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>

    <fileSets>
        <fileSet>
            <directory>${source.resources.path}</directory>
            <outputDirectory>${release.resources.path}</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${source.natives.path}</directory>
            <outputDirectory>${release.natives.path}</outputDirectory>
            <includes>
                <include>*.dll</include>
                <include>*.so</include>
                <include>*.jnilib</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${source.scripts.path}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.sh</include>
                <include>*.bat</include>
            </includes>
            <filtered>true</filtered>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${release.lib.path}</outputDirectory>
            <scope>runtime</scope>
            <excludes>
                <exclude>*:natives-*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>
